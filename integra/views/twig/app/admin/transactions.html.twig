<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" href="data:image/x-icon;," type="image/x-icon">
    <title>Транзакции</title>
    <link href="{{ publicFolder }}/css/app.min.css?ver=1.2.19" rel="stylesheet">

    <link href="{{ publicFolder }}/css/transactions.min.css?ver=1.2.39" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet">
</head>
<body data-script-folder="{{ scriptFolder }}">
<div class="transactions-table">
    <table id="transactions" class="display {# compact #}" style="width:100%">
        <thead>
        <tr>
            {% for header in headers %}
                <th>{{ header }}</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                {% for row in transaction %}

                    <td>
                        <div class="cell-container">{{ row|raw }}</div>
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
        {# <tfoot>
        <tr>
            {% for header in headers %}
                <th>{{ header }}</th>
            {% endfor %}
        </tr>
        </tfoot> #}
    </table>
</div>

<script src="{{ publicFolder }}/js/vendor/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
{# <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script> #}
<script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.print.min.js"></script>
{# <script src="//cdn.datatables.net/plug-ins/1.11.3/i18n/ru.json"></script> #}
<script>
  $(document).ready(function() {
    $('#transactions').DataTable({
      language: {
        url: '//cdn.datatables.net/plug-ins/1.11.3/i18n/ru.json',
      },
      //deferRender: true,
      'order': [[0, 'desc']],
      stateSave: true,
      'scrollX': true,
      columnDefs: [{targets: [3], class: 'wrapok'}],
      dom: 'Blfrtip',
      buttons: [
        /* 'copy', 'csv', */'excel', /*'pdf',*/ 'print',
      ],
    });
  });
</script>

</body>
</html>